# Storyteller Backend Configuration
# Copy this file to .env and fill in your values

# ============================================
# OpenAI API Configuration (REQUIRED)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ============================================
# AI Model Configuration
# ============================================
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o-mini
IMAGE_MODEL=dall-e-3
IMAGE_GENERATION_SIZE=1024x1024
IMAGE_GENERATION_QUALITY=standard

# ============================================
# Azure Storage (Optional - for image hosting)
# ============================================
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_CONTAINER_NAME=storyteller-images

# ============================================
# Data Paths (relative to backend directory)
# ============================================
DATA_DIR=../data
SAVED_GRAPHS_DIR=../saved_graphs
PERSONAS_FILE=config/personas.json

# ============================================
# CORS (Frontend URLs that can connect)
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================
# Retrieval Configuration
# ============================================
RETRIEVAL_TOP_K=10
BM25_WEIGHT=0.5
SEMANTIC_WEIGHT=0.5

# ============================================
# Story Generation Configuration
# ============================================
DEFAULT_STORY_LENGTH=1500
MIN_STORY_LENGTH=500
MAX_STORY_LENGTH=3000

# ============================================
# Authentication Mode
# ============================================
# Options: self_hosted, per_request_key, credit_system
AUTH_MODE=self_hosted

# Optional: Platform key for credit_system mode (Phase 3+)
# PLATFORM_OPENAI_KEY=sk-platform-key-here
